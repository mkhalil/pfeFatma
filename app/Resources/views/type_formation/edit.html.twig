
<div class="modal-header" style="
    background: cornflowerblue;">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
        &times;
    </button>
    <h4 class="modal-title">
        <i class="fa fa-edit"> TYPE Formation </i>
    </h4>
</div>
<div class="modal-body">
    {{ form_start(edit_form,{'attr':{'class':'smart-form','id':'smart-form-register','action':path('type_formation_new',{'id': type_Formation.id}),'method':'POST'|trans}})}}

    <section>
        <label class="label">LibelleFormation</label>
        <label class="input">
            <i class="icon-append fa fa-tag"></i>
            {{ form_widget(edit_form.libelleTypeF,{'attr': {'type':'text','name':'type_Formation','placeholder':'type_Formation'|trans}}) }}
            {{ form_errors(edit_form.libelleTypeF)}}
        </label>
    </section>

</div>
<div class="modal-footer">
    {{ form_widget(edit_form._token) }}

    <footer>
        <button type="button" class="btn btn-default" data-dismiss="modal">
            Cancel
        </button>
        <button type="submit" class="btn btn-primary">
            Edit
        </button>


    </footer>
    {{ form_end(edit_form,{'render_rest':false}) }}
</div>


