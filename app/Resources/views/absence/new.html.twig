

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><i class="fa fa-times" aria-hidden="true"></i><span class="close"></span></button>
    <h2 class="modal-title" id="modal-fa5-label">ADD Absence </h2>
</div>

    <div class="modal-body">
    {{ form_start(form,{'attr':{'class':'smart-form','id':'smart-form-register','action':path('absence_new'),'method':'POST'|trans}})}}
    <header>
        Absence
    </header>


    <fieldset>
        <div class="row">
            <section class="col-sm-12 col-md-12 col-lg-12 ">
                <label class="textarea"> <i class="icon-append fa fa-comment"></i>
                    {{ form_widget ( form.justifier,{ 'attr': {'name':'justifier','placeholder':'justifier'|trans}}) }}
                    {{ form_errors(form.justifier)}}</label>
            </section></div>
    </fieldset>



    <fieldset>
        <div class="row">



            <section class="col col-6">
                <label id="dob" class="input"> <i class="icon-append fa fa-calendar"></i>
                    {{ form_widget ( form.dateDebut,{ 'attr': { 'class':'startdate'|trans}}) }}
                    {{ form_errors(form.dateDebut)}}
                </label>
            </section>
            <section class="col col-6">
                <label id="dob" class="input"> <i class="icon-append fa fa-calendar"></i>
                    {{ form_widget ( form.dateFin,{ 'attr': { 'class':'finishdate'|trans}}) }}
                    {{ form_errors(form.dateFin)}}
                </label>
            </section>

        </div>
    </fieldset>

    <fieldset>
        <div class="row">
            <section class="col col-6">
                <label class="input"> <i class="icon-append fa fa-user"></i>
                    {{ form_widget(form.etat,{ 'attr': { 'type':'text','name':'etat','placeholder':'etat'|trans}}) }}
                    {{ form_errors(form.etat)}}
                </label>
            </section>
            <section class="col col-6">
                <label class="input"> <i class="icon-append fa fa-user"></i>
                    {{ form_widget(form.integere,{ 'attr': { 'type':'text','name':'integere','placeholder':'integere'|trans}}) }}
                    {{ form_errors(form.integere)}}
                </label>
            </section>

        </div>

    </fieldset>
    <fieldset>
        <div class="row">
            <section class="col-sm-12 col-md-12 col-lg-12 ">
                <label class="textarea"> <i class="icon-append fa fa-comment"></i>
                    {{ form_widget ( form.commentaire,{ 'attr': {'name':'commentaire','placeholder':'commentaire'|trans}}) }}
                    {{ form_errors(form.commentaire)}}</label>
            </section></div>
    </fieldset>


</div>
<div class="modal-footer">
    {{ form_widget(form._token) }}
    <footer>
        <button type="button" class="btn btn-default" data-dismiss="modal">
            Cancel
        </button>
        <button type="submit" class="btn btn-primary">
            Save
        </button>


    </footer>
    {{ form_end(form,{'render_rest':false}) }}
</div>

