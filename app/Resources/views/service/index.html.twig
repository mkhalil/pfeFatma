{% extends 'base.html.twig' %}

{% block main %}

    <!-- MAIN PANEL -->
    <div id="main" role="main">


        <!-- MAIN CONTENT -->
        <div id="content">

            <div class="row">
                <div class="col-xs-12 col-sm-7 col-md-7 col-lg-4">
                    <h1 class="page-title txt-color-blueDark">
                        <i class="fa fa-table fa-fw "></i>
                        Table
							<span>
								Data Tables
							</span>
                    </h1>
                </div>

            </div>

            <!-- widget grid -->
            <section id="widget-grid" class="">

                <!-- row -->
                <div class="row">

                    <article class="col-xs-6 col-sm-6 col-md-6 col-lg-6">

                        <!-- Widget ID (each widget will need unique ID)-->
                        <div class="jarviswidget jarviswidget-color-darken" id="wid-id-0" data-widget-editbutton="false">
                            <!-- widget options:
                            usage: <div class="jarviswidget" id="wid-id-0" data-widget-editbutton="false">

                            data-widget-colorbutton="false"
                            data-widget-editbutton="false"
                            data-widget-togglebutton="false"
                            data-widget-deletebutton="false"
                            data-widget-fullscreenbutton="false"
                            data-widget-custombutton="false"
                            data-widget-collapsed="true"
                            data-widget-sortable="false"

                            -->
                            <header>
                                <span class="widget-icon"> <i class="fa fa-table"></i> </span>
                                <h2>Standard Data Tables </h2>

                            </header>

                            <!-- widget div-->
                            <div>

                                <!-- widget edit box -->
                                <div class="jarviswidget-editbox">
                                    <!-- This area used as dropdown edit box -->




                                </div>
                                <!-- end widget edit box -->



                                    <table id="dt_basic" class="table table-striped table-bordered table-hover" width="100%">
                                        <thead>
                                        <tr>
                                            <th class="hasinput" style="width:17%">
                                                <input type="text" class="form-control" placeholder="Filter Id" />
                                            </th>
                                            <th class="hasinput" style="width:17%">
                                                <input type="text" class="form-control" placeholder="Libelleservice" />
                                            </th>

                                            <th class="hasinput" style="width:16%">
                                            <div class="text-right"><a href="#myModal"  data-toggle="modal" id="modal_link" class="btn btn-primary">
                                                    <i class="fa fa-plus"> <span class="hidden-mobile">Add New Row</span>
                                                    </i></a></div>

                                            </th>
                                        </tr>
                                        <tr>
                                            <th data-class="expand">Id</th>
                                            <th>ServiceLibelle</th>

                                            <th data-hide="phone">Action</th>

                                        </tr>


                                        </thead>

                                        <tbody>
                                        {% for service in services %}
                                            <tr>
                                                <td><a href="{{ path('service_show', { 'id': service.id }) }}">{{ service.id }}</a></td>
                                                <td>{{ service.libelleSrvice }}</td>

                                                <td>


                                                    <div class="modal fade" id="deleteModal{{ service.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                                        <div class="MessageBoxContainer animated fadeIn fast" id="Msg1">
                                                            <div class="MessageBoxMiddle"><span class="MsgTitle"
                                                                ><i class="glyphicon glyphicon-remove text-danger"></i> Supprimer
                                                                    <span class="txt-color-orangeDark"><strong>
                                                                        </strong></span> ?</span>
                                                                <p class="pText"><p><span>Voulez-vous vraiment supprimer <a href="#">{{ service.libelleSrvice}}</a> ? </span></p>
                                                                <div class="MessageBoxButtonSection">
                                                                    <div >
                                                                        <button type="submit" class="btn btn-default" data-dismiss="modal">
                                                                            Annuler
                                                                        </button>

                                                                        <button onclick="window.location.href='{{ path('service_delete', { 'id': service.id }) }}'" class="btn btn-danger"  id="lien">Supprimer</button>
                                                                    </div>

                                                                </div></div></div></div>







                                                    <a class="ui-pg-button ui-corner-all" rel="tooltip"  id="del_jqgrid" data-original-title="Delete selected row" title=""
                                                       aria-describedby="tooltip450112" data-toggle="modal" data-target="#deleteModal{{ service.id }}">
                                                        <div class="btn btn-danger">
                                                            <span class="fa fa-trash-o"></span></div></a>



                                                    <a  href="#editModal{{ service.id }}" class="ui-pg-button ui-corner-all"  rel="tooltip" id="jqgrid_iledit" title=""  data-toggle="modal"
                                                        data-original-title="Edit selected row" >
                                                        <div class="btn btn-sm btn-primary">
                                                            <span class="fa fa-pencil"></span></div>
                                                    </a>
                                                    <div class="modal fade" id="editModal{{ service.id }}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                                                        <div class="modal-dialog">
                                                            <br><br><br><br><br>
                                                            <div class="modal-content">

                                                                {{ render (controller('GestionBundle:service:edit',{'id':service.id})) }}
                                                            </div><!-- /.modal-content -->
                                                        </div><!-- /.modal-dialog -->
                                                    </div>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>

                                    </table>

                                </div>
                                <!-- end widget content -->
                                <!-- end widget div -->

                            </div>
                        </div>
                        <!-- Modal -->
                        <div class="modal fade" id="myModal" tabindex="-1" role="dialog">
                            <div class="modal-dialog">
                                <br><br><br><br><br>
                                <div class="modal-content">

                                    {{ render (controller('GestionBundle:service:new') ) }}
                                </div><!-- /.modal-content -->
                            </div><!-- /.modal-dialog -->
                        </div>
                        <!-- /.modal -->
                </div>
                <!-- end widget content -->

        </div>
        <!-- end widget div -->

    </div>
    <!-- end widget -->
    </article>
    <!-- WIDGET END -->
    </div>
    <!-- end row -->
    <!-- end row -->
    </section>
    <!-- end widget grid -->
    </div>
    <!-- END MAIN CONTENT -->
    </div>
    <!-- END MAIN PANEL -->



{% endblock %}

