
<div class="modal-header" style="
    background: cornflowerblue;">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
        &times;
    </button>
    <h4 class="modal-title">
        <i class="fa fa-edit"> Service </i>
    </h4>
</div>
<div class="modal-body">
    {{ form_start(form,{'attr':{'class':'smart-form','id':'smart-form-register','action':path('service_new'),'method':'POST'|trans}})}}
    <section>
        <label class="label">LibelleSite</label>
        <label class="input">
            <i class="icon-append fa fa-tag"></i>
            {{ form_widget(form.libelleSrvice,{'attr': {'type':'text','name':'site','placeholder':'Service'|trans}}) }}
            {{ form_errors(form.libelleSrvice)}}
        </label>
    </section>

</div>
<div class="modal-footer">
    {{ form_widget(form._token) }}
    <footer>
        <button type="button" class="btn btn-default" data-dismiss="modal">
            Cancel
        </button>
        <button type="submit" class="btn btn-primary">
            Save
        </button>


    </footer>
    {{ form_end(form,{'render_rest':false}) }}
</div>

