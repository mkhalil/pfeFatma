
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><i class="fa fa-times" aria-hidden="true"></i><span class="close"></span></button>
    <h2 class="modal-title" id="modal-fa5-label">ADD Site </h2>
</div>
<div class="modal-body">
    {{ form_start(form,{'attr':{'class':'smart-form','id':'smart-form-register','action':path('formateur_new'),'method':'POST'|trans}})}}

    <div class="row">
        <section class="col col-6">
            <label class="label">nom </label>

            <label class="input"> <i class="icon-append fa fa-user"></i>
                {{ form_widget(form.nom,{'attr':{'type':'text','placeholder':'Titre'|trans}})}}
                {{ form_errors(form.nom)}}
            </label>
        </section>

        <section class="hidden">
            <label class="label">prenom</label>

            <label class="input"> <i class="icon-append fa fa-user"></i>
                {{ form_widget(form.prenom,{'attr':{'id':'gestionbundle_formation_demandeFormation'|trans}})}}
                {{ form_errors(form.prenom)}}

            </label>
        </section>

        <section class="col col-6">
            <label class="label">cv </label>

            <label class="input"> <i class="icon-append fa fa-briefcase"></i>
                {{ form_widget(form.cv,{'attr':{'type':'text','placeholder':'Theme'|trans}})}}
                {{ form_errors(form.cv)}}

            </label>
        </section>

    </div>

</div>
<div class="modal-footer">
    {{ form_widget(form._token) }}

    <footer>
        <button type="button" class="btn btn-default" data-dismiss="modal">
            Cancel
        </button>
        <button type="submit" class="btn btn-primary">
            Edit
        </button>


    </footer>
    {{ form_end(form,{'render_rest':false}) }}
</div>



