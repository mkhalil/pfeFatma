<div id="order-form" class="smart-form" novalidate="novalidate">

    <div class="modal-header" xmlns="http://www.w3.org/1999/html">
        <div>
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
                &times;
            </button>
            <h4 class="modal-title" >
                <i class="fa fa-edit"> Form demande Formation</i>
            </h4>
        </div>

    </div>

    <div class="modal-body">
    {{ form_start(edit_form,{'attr':{'class':'smart-form','id':'smart-form-register','action':path('conge_edit',{'id':conge.id}),'method':'POST'|trans}})}}
        <header>
            CONGE
        </header>

        <fieldset>
            <div class="row">
                <section class="col col-6">
                    <label class="input"> <i class="icon-append fa fa-user"></i>
                        {{ form_widget(edit_form.statutsConge,{ 'attr': { 'type':'text','name':'name','placeholder':'statutsConge'|trans}}) }}
                        {{ form_errors(edit_form.statutsConge)}}
                    </label>
                </section>

            </div>

        </fieldset>



        <fieldset>

            <div class="row">

                <section class="col col-6">
                    <label class="label">Date de naissance</label>
                    <label id="dob" class="input"> <i class="icon-append fa fa-calendar"></i>
                        {{ form_widget ( edit_form.dateDebutConge,{ 'attr': { 'class':' db'|trans } } ) }}
                    </label>
                </section>
                <section class="col col-6">
                    <label class="label">Date de naissance</label>
                    <label id="dob" class="input"> <i class="icon-append fa fa-calendar"></i>
                        {{ form_widget ( edit_form.dateFinConge,{ 'attr': { 'class':' df'|trans } } ) }}
                    </label>
                </section>

            </div>
        </fieldset>




        <fieldset>
            <div class="row">
                <section class="col col-6">


                    <label class="label">TypeConge</label>
                    <label class="select">
                        {{ form_widget ( edit_form.typeconge,{ 'attr': {'required':'required','placeholder':'dateDebutConge'|trans } } ) }}
                        {{ form_errors(edit_form.typeconge)}}
                        <i></i>
                    </label>
                </section>

                <section class="col col-6">


                    <label class="label">TypeConge</label>
                    <label class="select">
                        {{ form_widget ( edit_form.employee,{ 'attr': {'required':'required','placeholder':'dateDebutConge'|trans } } ) }}
                        {{ form_errors(edit_form.employee)}}
                        <i></i>
                    </label>
                </section>

            </div>
        </fieldset>


    </div>
    <div class="modal-footer">
        {{ form_widget(edit_form._token) }}

        <footer>
            <button type="button" class="btn btn-default" data-dismiss="modal">
                Cancel
            </button>
            <button type="submit" class="btn btn-primary">
                Edit
            </button>


        </footer>
        {{ form_end(edit_form,{'render_rest':false}) }}
    </div>
</div>
