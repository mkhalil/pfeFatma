{% extends 'base.html.twig' %}

{% block body %}
    <h1>Conge</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ conge.id }}</td>
            </tr>
            <tr>
                <th>Statutsconge</th>
                <td>{{ conge.statutsConge }}</td>
            </tr>
            <tr>
                <th>Datedebutconge</th>
                <td>{% if conge.dateDebutConge %}{{ conge.dateDebutConge|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Datefinconge</th>
                <td>{% if conge.dateFinConge %}{{ conge.dateFinConge|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('conge_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('conge_edit', { 'id': conge.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
