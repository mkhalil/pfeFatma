<div class="modal-header" style="
    background: cornflowerblue;">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
        &times;
    </button>
    <h4 class="modal-title">
        <i class="fa fa-edit"> TYPE CONTRAT </i>
    </h4>
</div>
<div class="modal-body">
    {{ form_start(form,{'attr':{'class':'smart-form','id':'smart-form-register','action':path('conge_new'),'method':'POST'|trans}})}}

    <header>
        Formation
    </header>
    <fieldset>
        <div class="row">
            <section class="col col-6">
                <label class="input"> <i class="icon-prepend fa fa-user"></i>
                    {{ form_widget(form.statutsConge,{'attr': {'type':'text','name':'statutsConge','placeholder':'statutsConge'|trans}}) }}
                    {{ form_errors(form.statutsConge)}}
                </label>
            </section>

        </div>

        <div class="row">
            <section class="col col-6">


                {{ form_widget ( form.dateDebutConge) }}

            </section>
            <section class="col col-6">
                {{ form_widget ( form.dateFinConge) }}
            </section>
        </div>
    </fieldset>




    <fieldset>
        <div class="row">
            <section class="col col-6">
                <label class="select">
                    {{ form_widget ( form.typeconge,{ 'attr': {'required':'required'|trans } } ) }}
                    {{ form_errors(form.typeconge)}}
                    <i></i>
                </label>
            </section>

        </div>
        <div class="row">
            <section class="col col-6">
                <label class="select">
                    {{ form_widget ( form.employee,{ 'attr': {'required':'required'|trans } } ) }}
                    {{ form_errors(form.employee)}}
                    <i></i>
                </label>
            </section>

        </div>

    </fieldset>




</div>
<div class="modal-footer">
    {{ form_widget(form._token) }}

    <footer>
        <button type="button" class="btn btn-default" data-dismiss="modal">
            Cancel
        </button>
        <button type="submit" class="btn btn-primary">
            valide
        </button>


    </footer>
    {{ form_end(form,{'render_rest':false}) }}
</div>
