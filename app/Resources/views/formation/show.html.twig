

{% block body %}
    <h1>Formation</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ formation.id }}</td>
            </tr>
            <tr>
                <th>Libelleformation</th>
                <td>{{ formation.libelleFormation }}</td>
            </tr>
            <tr>
                <th>Datedebuteformation</th>
                <td>{% if formation.datedebuteFormation %}{{ formation.datedebuteFormation|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Datefinformation</th>
                <td>{% if formation.dateFinFormation %}{{ formation.dateFinFormation|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ formation.type }}</td>
            </tr>
            <tr>
                <th>Animation</th>
                <td>{{ formation.animation }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ formation.etat }}</td>
            </tr>
            <tr>
                <th>Coutlmateriel</th>
                <td>{{ formation.coutlmateriel }}</td>
            </tr>
            <tr>
                <th>Coutmateriel4</th>
                <td>{{ formation.coutMateriel4 }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('formation_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('formation_edit', { 'id': formation.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
