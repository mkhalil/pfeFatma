<div class="modal-header" >
    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><i class="fa fa-times" aria-hidden="true"></i><span class="close"></span></button>
    <h2 class="modal-title" id="modal-fa5-label"> Ajouter Formation </h2>
</div>
<div class="modal-body" style="  overflow-y: auto;">
    {{ form_start(form,{'attr':{'class':'smart-form','id':'smart-form-register','action':path('formation_new1'),'method':'POST'|trans}})}}
    <div class="panel-group smart-accordion-default" id="accordion">
        <div class="panel panel-default">
            <div class="panel-heading " style="background-color: #AC5287">
                <h4 class="panel-title txt-color-white"><a data-toggle="collapse" data-parent="#accordion"
                                                           href="#collapseOne">
                        <i class="fa fa-lg fa-angle-down pull-right txt-color-white"></i>
                        <i class="fa fa-lg fa-angle-up pull-right txt-color-white"></i>
                        Collapsible Group Item #1 </a></h4>
            </div>
            <fieldset id="collapseOne" class="panel-collapse collapse in">
                <header>
                    Ajouter Formation
                </header>

                <fieldset>
                    <div class="row">
                        <section class="col col-6">
                            <label class="label">titre </label>

                            <label class="input"> <i class="icon-append fa fa-user"></i>
                                {{ form_widget(form.titre,{'attr':{'type':'text','placeholder':'Titre'|trans}})}}
                                {{ form_errors(form.titre)}}
                            </label>
                        </section>

                        <section class="hidden">
                            <label class="label">demandeFormation</label>

                            <label class="input"> <i class="icon-append fa fa-user"></i>
                                {{ form_widget(form.demandeFormation,{'attr':{'id':'gestionbundle_formation_demandeFormation'|trans}})}}
                                {{ form_errors(form.demandeFormation)}}

                            </label>
                        </section>

                        <section class="col col-6">
                            <label class="label">theme </label>

                            <label class="input"> <i class="icon-append fa fa-briefcase"></i>
                                {{ form_widget(form.theme,{'attr':{'type':'text','placeholder':'Theme'|trans}})}}
                                {{ form_errors(form.theme)}}

                            </label>
                        </section>

                    </div>

                    <div class="row">
                        <section class="col col-6">
                            <label class="label">dateDebut </label>

                            <label class="input"> <i class="icon-append fa fa-calendar"></i>
                                {{ form_widget(form.dateDebut,{'attr':{'class':'startdate'|trans}})}}
                                {{ form_errors(form.dateDebut)}}
                            </label>
                        </section>

                        <section class="col col-6">
                            <label class="label">dateFin </label>
                            <label class="input"> <i class="icon-append fa fa-calendar"></i>
                                {{ form_widget(form.dateFin,{'attr':{'class':'finishdate'|trans}})}}
                                {{ form_errors(form.dateFin)}}

                            </label>
                        </section>
                    </div>

                    <div class="row">
                        <section class="col col-6">
                            <label class="label">contenue </label>
                            <label class="textarea"> <i class="icon-append fa fa-comment"></i>
                                {{ form_widget(form.contenue,{'attr':{'type':'text','placeholder':'Tell us about your project'|trans}})}}

                            </label>
                        </section>
                        <section class="col col-2">
                            <label class="label">typeFormation </label>
                            <label class="select">
                                {{ form_widget(form.typeFormation,{ 'attr': {'required':'required'|trans } } ) }}

                                <i></i>

                            </label>
                        </section>
                        <section class="col col-4">
                            <label class="label">lieu </label>
                            <label class="input"> <i class="icon-append fa fa-comment"></i>
                                {{ form_widget(form.lieu,{ 'attr': {'required':'required'|trans } } ) }}

                                <i></i>

                            </label>
                        </section>
                    </div>

                    <div class="row">


                    </div>
                    <div class="row">

                        <section class="col col-4">
                            <label class="label">coutImateriel </label>
                            <label class="input"> <i class="icon-append fa fa-comment"></i>
                                {{ form_widget(form.coutImateriel,{ 'attr': {'required':'required'|trans } } ) }}

                                <i></i>

                            </label>
                        </section>
                        <section class="col col-4">
                            <label class="label">coutMateriel </label>
                            <label class="input"> <i class="icon-append fa fa-comment"></i>
                                {{ form_widget(form.coutMateriel,{ 'attr': {'required':'required'|trans } } ) }}

                                <i></i>

                            </label>
                        </section>



                    </div>








                    <div class="smart-form">
                        <label class="toggle">

                            {{ form_widget(form.reccurence,{'attr': {'id':'gestionbundle_formation_reccurence'|trans}}) }}
                            <i data-swchon-text="oui" data-swchoff-text="non"></i>Switch Navs / Pills</label>
                    </div>



                    <hr />

                    <div  id="dv" style="display: none">
                        <div class="row">
                            <div class=" col col-2 ">
                                <label class="label">chaque</label>

                                <label class="input"> <i class="icon-append fa fa-comment"></i>
                                    {{ form_widget(form.chaque) }}

                                    <i></i>

                                </label>
                            </div>


                            <div class=" col col-2 ">
                                <label class="label">periode</label>

                                <label class="select">
                                    {{ form_widget(form.periode) }}

                                    <i></i>

                                </label>
                            </div>


                        </div>


                        <div class="row">

                            <div class=" col col-2 label">

                                <label class="checkbox">
                                    {{ form_widget(form.finApres) }}
                                    {{ form_errors(form.finApres)}}
                                    <i></i>Fin Apres</label>
                            </div>

                            <div class=" col col-2 ">
                                <label class="checkbox">
                                    {{ form_widget(form.terminerA) }}
                                    {{ form_errors(form.terminerA)}}
                                    <i></i>Fin Apres</label>
                            </div>

                        </div>

                        <div class="row">
                            <div class=" col col-2 ">
                                <label class="label">Ocurrancedate</label>

                                {{ form_widget(form.Ocurrancedate) }}
                                {{ form_errors(form.Ocurrancedate)}}
                            </div>


                            <div class=" col col-2 ">
                                <label class="label">Ocurrance</label>

                                <label class="input"> <i class="icon-append fa fa-comment"></i>
                                    {{ form_widget(form.OcurranceNbj) }}

                                    <i></i>

                                </label>
                            </div>
                        </div>


                    </div>



                </fieldset>
            </fieldset>
        </div></div></div>

<div class="modal-footer">
    {{ form_widget(form._token) }}

    <footer>
        <button type="button" class="btn btn-default" data-dismiss="modal">
            Annuler
        </button>
        <button type="submit" class="btn btn-primary">
            Enregiter
        </button>


    </footer>
    {{ form_end(form,{'render_rest':false}) }}
</div>

