<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
        &times;
    </button>
    <h4 class="modal-title" id="myModalLabel">Qualification</h4>
</div>
<div class="modal-body">
    {{ form_start(form,{'attr':{'class':'smart-form','id':'smart-form-register','action':path('qualification_new'),'method':'POST'|trans}})}}
    <section>
        <label class="label">LibelleQualification</label>
        <label class="input">
            <i class="icon-append fa fa-tag"></i>
            {{ form_widget(form.libelleQualif,{'attr': {'type':'text','name':'Qualification','placeholder':'qualification'|trans}}) }}
            {{ form_errors(form.libelleQualif)}}


        </label>

    </section>
    <label class="label">Type Qualification  <i class="fa fa-fw fa-plus-circle txt-color-green"></i></label>
        <label class="select" class="col col-6">

            <i></i>
        </label>


    <label class="label">Employee</label>
    <label class="input">
        <i class="icon-append fa fa-tag"></i>
        {{ form_widget(form.employees) }}
        {{ form_errors(form.employees)}}
    </label>
    </label>


</div>

<div class="modal-footer">
    {{ form_widget(form._token) }}
    <footer>
        <button type="button" class="btn btn-default" data-dismiss="modal">
            Cancel
        </button>
        <button type="submit" class="btn btn-primary">
            Save
        </button>


    </footer>
    {{ form_end(form,{'render_rest':false}) }}
</div>

