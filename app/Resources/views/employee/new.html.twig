<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
        &times;
    </button>
    <div class="row" >
        <h4 class="modal-title pull-left " id="myModalLabel" style="margin-left: 20px">  Ajouter employé </h4>
        <span id="bdg" class="badge bg-color-red bounceIn animated pull-left " style="padding:6px; display: none; margin-left: 15px;" ></span>

    </div>
</div>



<div class="modal-body" style=" max-height: 470px; overflow-y: auto;">
    {{ form_start(form,{ 'attr': {'enctype':'multipart/form-data','class': 'smart-form ','action': path('employee_new'), 'method': 'POST'|trans }} ) }}

    <div class="panel-group smart-accordion-default" id="accordion">
        <div class="panel panel-default">
            <div class="panel-heading " style="background-color: #71843F">
                <h4 class="panel-title txt-color-white"><a data-toggle="collapse" data-parent="#accordion"
                                                           href="#collapseOne">
                        <i class="fa fa-lg fa-angle-down pull-right txt-color-white"></i>
                        <i class="fa fa-lg fa-angle-up pull-right txt-color-white"></i>
                        Création d'un nouveau employé </a></h4>
            </div>
            <div id="collapseOne" class="panel-collapse collapse in">
                <div class="panel-body padding-7 ">


                    <div class="row" >
                        <article class="col col-6">


                            <section class="">
                                <label class="label">Nom</label>
                                <label class="input"> <i class="icon-append fa fa-tag"></i>
                                    {{ form_widget ( form.nom,{ 'attr': {'type': 'text'|trans } } ) }}</label>
                            </section>

                            <section class="">
                                <label class="label">Prénom</label>
                                <label class="input"> <i class="icon-append fa fa-tag"></i>
                                    {{ form_widget ( form.prenom,{ 'attr': {'type': 'text'|trans } } ) }}</label>
                            </section>


                            <section class="">
                                <label class="label">Fonction</label>
                                <label class="select"> {{ form_widget ( form.fonctions,{ 'attr': {'type': 'text'|trans } } ) }}</label>
                                <i></i>
                            </section>



                        </article>
                        <article class="col col-6 " >


                            <section class="" style="width: 150px; height: 150px; margin: 0 auto; "  >
                                <div class="slim " data-label="Drop profile photo here"  data-ratio="1:1" style="border-radius: 40%; ">
                                    <input type="file" name="imageFile" />


                                </div>

                            </section>
                            <section class="">
                                <label class="label">Genre </label>
                                <label class="select">
                                    {{ form_widget ( form.sexe,{ 'attr': {'required':'required'|trans } } ) }}
                                    <i></i>
                                </label>
                            </section>
                        </article>




                    </div>




                    <div class="row">

                        <section class="col col-6">
                            <label class="label">Email principal</label>
                            <label class="input"> <i class="icon-append fa fa-tag"></i>
                                {{ form_errors ( form.emailEmployee)}}
                                {{ form_widget ( form.emailEmployee,{ 'attr': {'type': 'text'|trans } } ) }}</label>
                        </section>

                        <section class="col col-6">
                            <label class="label">Email secondaire</label>
                            <label class="input"> <i class="icon-append fa fa-tag"></i>
                                {{ form_widget ( form.emailSecondaireEmployee,{ 'attr': {'type': 'text'|trans } } ) }}</label>
                        </section>





                    </div>






                </div>
            </div>
        </div>

        <div class="panel panel-default">
            <div class="panel-heading" style="background-color: #AC5287">
                <h4 class="panel-title txt-color-white ">
                    <a data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" class="collapsed">

                        <i class="fa fa-lg fa-angle-down pull-right txt-color-white"></i>
                        <i class="fa fa-lg fa-angle-up pull-right txt-color-white"></i>
                       Informations </a></h4>
            </div>
            <div id="collapseTwo" class="panel-collapse collapse ">
                <div class="panel-body padding-7 ">

                    <div class="row">




                        <section class="col col-6">
                            <label class="label">Département
                                <a href="#myNewdepartementModal" class="open ajouter"  data-toggle="modal"> <i class=" glyphicon glyphicon-plus-sign " style="color: #3cb131"></i></a>
                            </label>
                            <label class="select">
                                {{ form_widget ( form.departement,{ 'attr': {'required':'required'|trans } } ) }}
                                <i></i>
                            </label>
                        </section>



                        <section class="col col-6">
                            <label class="label">Site
                                <a href="#myNewformateurModal" class="open ajouter"  data-toggle="modal"> <i class=" glyphicon glyphicon-plus-sign " style="color: #3cb131"></i></a>
                            </label>
                            <label class="select">
                                {{ form_widget ( form.site,{ 'attr': {'required':'required'|trans } } ) }}
                                <i></i>
                            </label>
                        </section>
                    </div>

                    <div class="row">
                        <section class="col col-6">
                            <label class="label">Matricule </label>
