                                {{ form_widget ( form.gradeEmployee,{ 'attr': {'type': 'text','name':'username'|trans } } ) }}</label>
                        </section>

                    </div>



                    <div class="row">

                        <section class="col col-6">
                            <label class="label">Numéro TEL </label>
                            <label class="input"> <i class="icon-append fa fa-tag"></i>
                                {{ form_widget ( form.numTelEmployee,{ 'attr': {'type': 'text','name':'username'|trans } } ) }}</label>
                        </section>


                        <section class="col col-6">
                            <label class="label">Rib</label>
                            <label class="input"> <i class="icon-append fa fa-tag"></i>
                                {{ form_widget ( form.rIBEmployee,{ 'attr': {'type': 'text','name':'username'|trans } } ) }}</label>
                        </section>
                    </div>

                    <section>
                        <label class="label">Numéro sécurité sociale</label>
                        <label class="input"> <i class="icon-append fa fa-tag"></i>
                            {{ form_widget ( form.numSecuriteSocialeEmployee,{ 'attr': {'type': 'text','name':'username'|trans } } ) }}</label>
                    </section>

                </div>
            </div>
        </div>

        <div class="panel panel-default">
            <div class="panel-heading" style="background-color: #6E587A">
                <h4 class="panel-title txt-color-white">
                    <a data-toggle="collapse" data-parent="#accordion" href="#collapseThree" class="collapsed">
                        <i class="fa fa-lg fa-angle-down pull-right txt-color-white"></i>
                        <i class="fa fa-lg fa-angle-up pull-right txt-color-white"></i>
                        Profil</a></h4>
            </div>
            <div id="collapseThree" class="panel-collapse collapse ">
                <div class="panel-body padding-7 ">

                    <div class="row">
                        <section class="col col-6">
                            <label class="label">Adresse </label>
                            <label class="input"> <i class="icon-append fa fa-tag"></i>
                                {{ form_widget ( form.adresseEmploye,{ 'attr': {'type': 'text','name':'username'|trans } } ) }}</label>
                        </section>


                    </div>

                    <div class="row">
                        <section class="col col-6">
                            <label class="label">Date de naissance</label>
