                        <section class="col col-6">
                            <label class="label">Délivré à </label>
                            <label class="input"> <i class="icon-append fa fa-tag"></i>
                                {{ form_widget ( form.delivreA,{'attr': {'type': 'text'|trans } } ) }}</label>
