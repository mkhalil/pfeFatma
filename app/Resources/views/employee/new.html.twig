        <div class="panel panel-default" >
            <div class="panel-heading" style="border-color:#ba871f; background-color: #C79121 ; ">
                <h4 class="panel-title txt-color-white"><a data-toggle="collapse" data-parent="#accordion"
                                                           href="#collapseFour" class="collapsed">
                        <i class="fa fa-lg fa-angle-down pull-right txt-color-white"></i>
                        <i class="fa fa-lg fa-angle-up pull-right txt-color-white "></i>
                        Autre détails</a></h4>
            </div>
            <div id="collapseFour" class="panel-collapse collapse ">
                <div class="panel-body padding-7">




                    <section>
                        <label class="label">Compétence</label>
                        <label class="textarea"> <i class="icon-append fa fa-comment"></i>
                            {{ form_widget ( form.competance,{ 'attr': {'type': 'text','name':'username'|trans } } ) }}
                            </label>
                    </section>
                    <section>
                        <label class="label">Diplome</label>
                        <label class="textarea"> <i class="icon-append fa fa-comment"></i>
                            {{ form_widget ( form.diplome,{ 'attr': {'type': 'text','name':'username'|trans } } ) }}
                            </label>
                    </section>

                    <section>
                        <label class="label">Expérience</label>
                        <label class="textarea"> <i class="icon-append fa fa-comment"></i>
                            {{ form_widget ( form.experience,{ 'attr': {'type': 'text','name':'username'|trans } } ) }}
                            </label>
                    </section>

                    <section>
                        <label class="label">Aptitude physique</label>
                        <label class="textarea"> <i class="icon-append fa fa-comment"></i>
                            {{ form_widget ( form.aptitudePhysique,{ 'attr': {'type': 'text','name':'username'|trans } } ) }}
